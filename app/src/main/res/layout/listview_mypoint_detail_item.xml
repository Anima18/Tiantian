<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_point_detail_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="充值了1000消费积分 - WX"
            android:textColor="@color/primary_text_dark_color"/>

        <TextView
            android:id="@+id/user_point_detail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark_color"
            android:text="+1000"/>

    </LinearLayout>

    <TextView
        android:id="@+id/user_point_detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textColor="@color/secondary_text_dark_color"
        android:text="2020-08-08 12:54:01"/>

</LinearLayout>