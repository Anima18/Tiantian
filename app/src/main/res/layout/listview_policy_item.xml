<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/item_clickable_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_policy_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/plaza_item_primary_text_size"
            android:textColor="@color/primary_text_dark_color"
            android:text="趋势长赢"/>

        <TextView
            android:id="@+id/connector_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_policy_name_value"
            android:text="  -  "/>

        <TextView
            android:id="@+id/list_policy_developer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/connector_view"
            android:textSize="@dimen/plaza_item_primary_text_size"
            android:textColor="@color/primary_text_dark_color"
            android:text="张云"/>

        <TextView
            android:id="@+id/list_policy_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/plaza_item_second_text_size"
            android:textColor="@color/secondary_text_dark_color"
            android:text="免费"/>

        <TextView
            android:id="@+id/list_policy_market_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@id/list_policy_name_value"
            android:textSize="@dimen/plaza_item_second_text_size"
            android:textColor="@color/secondary_text_dark_color"
            android:text="针对领域: "/>

        <TextView
            android:id="@+id/list_policy_market_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_policy_market_label"
            android:layout_alignTop="@id/list_policy_market_label"
            android:textSize="@dimen/plaza_item_second_text_size"
            android:textColor="@color/secondary_text_dark_color"
            android:text="ETH"/>

        <TextView
            android:id="@+id/list_policy_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/list_policy_market_value"
            android:layout_alignTop="@id/list_policy_market_label"
            android:textSize="@dimen/plaza_item_second_text_size"
            android:textColor="@color/secondary_text_dark_color"
            android:text="时间级别: "/>

        <TextView
            android:id="@+id/list_policy_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_policy_time_label"
            android:layout_alignTop="@id/list_policy_market_label"
            android:textSize="@dimen/plaza_item_second_text_size"
            android:textColor="@color/secondary_text_dark_color"
            android:text="15分钟"/>

        <ImageView
            android:id="@+id/list_policy_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_start"/>

        <TextView
            android:id="@+id/list_policy_accuracy_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_policy_market_label"
            android:textSize="@dimen/plaza_item_second_text_size"
            android:textColor="@color/secondary_text_dark_color"
            android:text="回测准确率: "/>

        <TextView
            android:id="@+id/list_policy_accuracy_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/list_policy_accuracy_label"
            android:layout_toRightOf="@id/list_policy_accuracy_label"
            android:textSize="@dimen/plaza_item_second_text_size"
            android:textColor="@color/secondary_text_dark_color"
            android:text="75%以上"/>
    </RelativeLayout>


</LinearLayout>
