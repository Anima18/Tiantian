<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ut.utuicomponents.uttoolbar.UTUiAndroidToolbar
            android:id="@+id/activity_login_toolBar"
            style="@style/toolbar_white"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:isshowbackbtn="true"
            app:menuiconcolor="@color/white"
            app:navigationIcon="@drawable/ic_close_black_24dp"
            app:titleplace="left" />

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_login_toolBar"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="登录天机，体验更多功能"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_title"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/loginView_area_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawablePadding="6dp"
                android:text="+86"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="13750034730"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_below="@id/input_layout"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="24dp"
            android:inputType="number"
            android:lines="1"
            android:onClick="verifySMS"
            android:text="获取验证码"
            android:textSize="18sp"
            android:theme="@style/AppTheme.Button.Colored.primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/weixin_login"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="其他登录方式"
            android:textColor="@color/secondary_text_dark_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/weixin_login"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:src="@drawable/wechat" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sms_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.ut.utuicomponents.uttoolbar.UTUiAndroidToolbar
            android:id="@+id/activity_toolBar"
            style="@style/toolbar_white"
            android:layout_height="50dp"
            app:isshowbackbtn="true"
            app:menuiconcolor="@color/white"
            app:titleplace="left" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="输入验证码"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="短信已发送至 +8613750034730"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="36dp"
            android:paddingRight="24dp"
            android:paddingBottom="36dp">

            <EditText
                android:id="@+id/validateCode1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/validateCode2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/validateCode3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/validateCode4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/secondary_text_dark_color" />

    </LinearLayout>

</RelativeLayout>