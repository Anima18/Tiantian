<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="11dp"
    android:paddingBottom="11dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:background="@drawable/item_clickable_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signal_direction"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/signal_more_background"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="做多/平空"/>

        <TextView
            android:id="@+id/signal_policyMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/signal_direction"
            android:layout_centerInParent="true"
            android:textColor="#343434"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:text="black"/>

        <TextView
            android:id="@+id/signal_policyTimeLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/signal_policyMarket"
            android:layout_toLeftOf="@id/signal_time"
            android:layout_centerInParent="true"
            android:textColor="#343434"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:text="15分钟级别"/>

        <TextView
            android:id="@+id/signal_time"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#343434"
            android:textSize="14sp"
            android:text="2019.12.31 11:00:00"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:textAlignment="textStart">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848484"
                android:paddingRight="10dp"
                android:text="策略名称"/>
            <TextView
                android:id="@+id/signal_policyName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#3f3f3f"
                android:text="策略名称"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:textAlignment="textStart">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848484"
                android:paddingRight="10dp"
                android:text="策略类型"/>
            <TextView
                android:id="@+id/signal_policyKind"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#3f3f3f"
                android:text="策略类型"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:textAlignment="textStart">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848484"
                android:paddingRight="10dp"
                android:text="当前价格"/>
            <TextView
                android:id="@+id/signal_currPrice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#3f3f3f"
                android:text="当前价格"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:textAlignment="textStart">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848484"
                android:paddingRight="10dp"
                android:text="止损价格"/>
            <TextView
                android:id="@+id/signal_stopPrice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#3f3f3f"
                android:text="止损价格"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#848484"
            android:paddingRight="10dp"
            android:text="信号描述"/>
        <TextView
            android:id="@+id/signal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3f3f3f"
            android:text="ddddddddddddddddddddddddddddddddddddddddddddddd"/>
    </LinearLayout>
</LinearLayout>