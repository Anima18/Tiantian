<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ut.utuicomponents.uttoolbar.UTUiAndroidToolbar
        android:id="@+id/activity_toolBar"
        style="@style/toolbar_white"
        app:isshowbackbtn="true"
        app:menuiconcolor="@color/white"
        app:titleplace="left"/>

    <com.chris.tiantian.view.MultipleStatusView
        android:id="@+id/adDetailAct_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loadingView="@layout/layout_loading_view"
        app:emptyView="@layout/layout_empty_view"
        app:errorView="@layout/layout_error_view"
        app:noNetworkView="@layout/layout_no_network_view">
        <!--<cn.campusapp.longimageview.LongImageView
            android:id="@+id/advertise_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->
        <WebView
            android:id="@+id/advertise_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.chris.tiantian.view.MultipleStatusView>

</LinearLayout>